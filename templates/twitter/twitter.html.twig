<div class="twitter-title">
  <div class="follow">
    <a href="http://twitter.com/{{ username }}" class="twitter-follow-button" data-show-count="false" data-lang="en">Follow @{{ username }}</a>
  </div>
  <div class="tweets"><a href="http://twitter.com/{{ username }}" target="_blank">Tweets</a></div>
</div>
<div id="twitter-wrapper">
  <div id="twitter-inner-wrapper">
  {% for tweet in tweets %}
    <div class="tweet">
      <div class="user-wrapper">
        <div class="time"><a href="https://twitter.com/{{ tweet.user.screen_name }}/statuses/{{ tweet.id_str }}" target="_blank">{{ tweet.time_ago }}</a></div>
        <div class="user-image"><img src="{{ tweet.user.profile_image_url}}" /></div>
        <div class="user-title"><a href="https://twitter.com/{{ tweet.user.screen_name }}" title="Twitter" target="_blank">{{ tweet.user.name }}</a></div>
        <div class="user-screen">@{{ tweet.user.screen_name }}</div>
      </div>
      {% if tweet.retweeted %}
        <div class="text">{{ tweet.retweeted_status.text }}</div>
      {% else %}
        <div class="text">{{ tweet.text }}</div>
      {% endif %}
      <div class="twitter-actions">
        <ul class="tweet-actions">
          <li class="ic-reply"><a href="https://twitter.com/intent/tweet?in_reply_to={{ tweet.id_str }}" class="reply-action web-intent" title="Reply"></a></li>
          <li class="ic-retweet"><a href="https://twitter.com/intent/retweet?tweet_id={{ tweet.id_str }}" class="retweet-action web-intent" title="Retweet"></a></li>
          <li class="ic-fav"><a href="https://twitter.com/intent/favorite?tweet_id={{ tweet.id_str }}" class="favorite-action web-intent" title="Favorite"></a></li>
        </ul>
      </div>
      {% if tweet.retweeted %}
      <div class="retweeted">
        <span class="retweeted-icon"></span>Retweeted by <a href="https://twitter.com/{{ tweet.user.screen_name }}" title="Twitter" target="_blank">{{ tweet.user.name }}</a>
      </div>
      {% endif %}
      {% if tweet.retweet_count != 0 %}
        <div class="more-info collapsed">
          <div class="info">
            <strong>{{ tweet.retweet_count }}</strong> <span class="info text">RETWEET</span>
          </div>
          <div class="title">Expand</div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
  </div>
</div>
<div class="twitter-bottom">
  <div id="custom-tweet-button">
    <a href="https://twitter.com/intent/tweet?screen_name={{ username }}" target="_blank">Tweet to @{{ username }}</a>
  </div>
</div>

